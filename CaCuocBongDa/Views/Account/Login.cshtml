<body class="fix-header fix-sidebar">
    <!-- Preloader - style you can find in spinners.css -->
    <div class="preloader">
        <svg class="circular" viewBox="25 25 50 50">
            <circle class="path" cx="50" cy="50" r="20" fill="none" stroke-width="2" stroke-miterlimit="10" />
        </svg>
    </div>
    <!-- Main wrapper  -->
    <div id="main-wrapper">

        <div class="unix-login" ng-app="ca-cuoc">
            <div class="container-fluid" ng-controller="mainController">
                <div class="row justify-content-center">
                    <div class="col-lg-4">
                        <div class="login-content card">
                            <div class="login-form">
                                <h4>ĐĂNG NHẬP</h4>
                                <form ng-submit="Login()" class="ng-dirty ng-valid-parse ng-valid ng-valid-required">
                                    <div class="form-group">
                                        <label>Tên tài khoản</label>
                                        <input type="text" class="form-control" placeholder="Tên tài khoản" ng-model="TenTaiKhoan" required>
                                    </div>
                                    <div class="form-group">
                                        <label>Mật khẩu</label>
                                        <input type="password" class="form-control" placeholder="Mật khẩu" ng-model="MatKhau" required>
                                    </div>
                                    <div class="checkbox">
                                        <label>
                                            <input type="checkbox"> Lưu
                                        </label>
                                        <label class="pull-right">
                                            <a href="#">Quên Mật Khẩu?</a>
                                        </label>

                                    </div>
                                    <button type="submit" class="btn btn-primary btn-flat m-b-30 m-t-30">Đăng Nhập</button>
                                    <div class="register-link m-t-15 text-center">
                                        <p>Tạo Tài Khoản ? <a href="@Url.Action("Register")"> Đăng ký</a></p>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <!-- End Wrapper -->
    <!-- All Jquery -->
    <script src="Scripts/lib/jquery/jquery.min.js"></script>
    <!-- Bootstrap tether Core JavaScript -->
    <script src="Scripts/lib/bootstrap/js/popper.min.js"></script>
